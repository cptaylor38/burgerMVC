<div class='row'>
    <h2>Create your burger:</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burgerName">Name your burger:</label>
            <input type="text" id="burgerName" name="name">
        </div>

        <div class="form-group">
            <label for="devoured">Have you tried this burger yet?</label><br>
            <input type="radio" name="devoured" value="1" checked> Yep!<br>
            <input type="radio" name="devoured" value="0"> Nope!
        </div>
        <button type="submit">Add Burger</button>
    </form>
</div>

<div class='row'>
    <div class='col-lg-6 col-md-12 col-sm-12'>
        <h2>New burgers to try:</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger_block id=id name=burger_name devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class='col-lg-6 col-md-12 col-sm-12'>
        <h2>Burgers you've tried:</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger_block id=id name=burger_name devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>