<h1>Burgers!</h1>

<h2>Burgers await!</h2>

<ul>
    {{#each burgers}}
    {{#unless sleepy}}
    {{> burgers/burger_block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers eaten!</h2>

<ul>
    {{#each burgers}}
    {{#if sleepy}}
    {{> burgers/burger_block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Eaten?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured" value="0"> Ready for tasting!
    </div>

    <button type="submit">Add Cat</button>
</form>